extends baseEmail 

block content
    p Hi #{firstName},
        p Forgot Your Password ?
        p No Worry! Click the link below to reset your password using PATCH request. The link is valid for only 10 minutes.
        table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                    td(align='left')
                        table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                            tbody
                                tr
                                    td
                                        a(href=`${url}`, target='_blank') Reset Password
        p If you didn't forgot your password, please ignore this email!